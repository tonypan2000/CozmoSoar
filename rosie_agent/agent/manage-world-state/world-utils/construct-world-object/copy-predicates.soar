# Copy predicates onto the object
 
### PROPOSAL
sp {construct-world-object*propose*copy-predicates
   (state <s> ^name construct-world-object
              ^new-object-rep.predicates <preds>
             -^copied-predicates)
-->
   (<s> ^operator <o> +)
   (<o> ^name copy-predicates)
}

### ELABORATION
# Elaborate predicates to copy from imagined-obj
sp {construct-world-object*elaborate*copy-predicates*imagined-predicate
   (state <s> ^name construct-world-object
              ^operator <o> +
              ^source-type imagined-obj
              ^source-obj.predicates.<prop> <pred>
              ^new-object-rep.predicates <preds>
             -^ignore-predicate <prop>)
   (<o> ^name copy-predicates)
-->
   (<o> ^imagined-predicate <p>)
   (<p> ^property <prop>
        ^predicate <pred>)
}

