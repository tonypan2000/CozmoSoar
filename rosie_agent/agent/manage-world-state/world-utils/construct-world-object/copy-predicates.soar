### APPLICATION
# Add a copied-predicates flag to the state
sp {construct-world-object*apply*copy-predicates*mark*copied-predicates
   (state <s> ^name construct-world-object
              ^operator.name copy-predicates)
-->
   (<s> ^copied-predicates true)
}

# Priority 1: Predicates from perception or imagined
sp {construct-world-object*apply*copy-predicate*copy*perception-predicate
   (state <s> ^name construct-world-object
              ^operator <o>
              ^new-object-rep.predicates <preds>)
   (<o> ^name copy-predicates
        ^perception-predicate <p>)
   (<p> ^property <prop>
        ^predicate <pred>)
-->
   (<preds> ^<prop> <pred>)
}

