sp {task-utils*push-task-segment*propose*add-object-to-world
   (state <s> ^name push-task-segment
              ^merge-object-workspace <ws>)
   (<ws> ^source-obj <obj>
        -^world-obj)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-object-to-world
        ^object <obj>)
}

sp {task-utils*push-task-segment*apply*add-object-to-world*add*to*perception-monitor
   (state <s> ^name push-task-segment
              ^operator <o>
              ^top-state.perception-monitor.changes <chgs>)
   (<o> ^name add-object-to-world
        ^object <obj>)
-->
   (<chgs> ^change <c>)
   (<c> ^type new-object
        ^imagined-obj <obj>)
}

