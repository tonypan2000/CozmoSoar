sp {handle-missing-object-failure*propose*terminate-current-task
   (state <s> ^name handle-missing-object-failure
              ^task-segment <seg>)
-->
   (<s> ^operator <o> + <)
   (<o> ^name terminate-current-task)
}

sp {handle-missing-object-failure*apply*terminate-current-task*add*failure*status
   (state <s> ^name handle-missing-object-failure
              ^operator.name terminate-current-task
              ^task-segment <seg>)
-->
   (<seg> ^unrecoverable-failure missing-object-failure)
}

sp {handle-missing-object-failure*apply*terminate-current-task*send*message*missing-object-failure
   (state <s> ^name handle-missing-object-failure
              ^operator.name terminate-current-task
             -^silent true
              ^task-segment.task-operator.task-handle <task-handle>
              ^missing-object <obj>
              ^top-state.interaction.changes <chgs>)
-->
   (<chgs> ^outgoing-message <msg>)
   (<msg> ^type missing-object-failure
          ^complete-message true
          ^fields <f>)
   (<f> ^task-handle <task-handle>
        ^missing-object <obj>)
}
