sp {op_explore*propose*scan
   (state <s> ^name op_explore1
             -^current-task-segment.scanned <wp-handle>
             -^until-clause
              ^top-state.world.robot.current-waypoint.handle <wp-handle>)
-->
   (<s> ^operator <scan-op> +)
   (<scan-op> ^name op_scan1 
              ^item-type task-operator
              ^task-handle scan1)
}

sp {op_explore*propose*scan*until-clause
   (state <s> ^name op_explore1
             -^current-task-segment.scanned <wp-handle>
              ^until-clause <until>
              ^top-state.world.robot.current-waypoint.handle <wp-handle>)
-->
   (<s> ^operator <scan-op> +)
   (<scan-op> ^name op_scan1
              ^item-type task-operator
              ^task-handle scan1
              ^until-clause <until>)
}

sp {op_explore*apply*scan*mark*scanned
   (state <s> ^name op_explore1
              ^operator <o>
              ^current-task-segment <seg>
              ^child-task-segment <ca>
              ^top-state.world.robot.current-waypoint.handle <wp-handle>)
   (<ca> ^task-operator <o>
         ^status <any>)
   (<o> ^name op_scan1)
-->
   (<seg> ^scanned <wp-handle>)
}
              
