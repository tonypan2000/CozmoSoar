
### send the low-level scan command to the output-link when the until-clause is satisfied ###

sp {op_scan1*propose*send-turn-command
   (state <s> ^name op_scan1
             -^current-task-segment.stop-command)
-->
   (<s> ^operator <o> + =)
   (<o> ^name send-turn-command
        ^item-type command-operator
        ^command-name turn-command)
}


### magicbot ###

sp {op_scan1*external*apply*send-turn-command*magicbot
   (state <s> ^name op_scan1
              ^problem-space.execution-type external
              ^agent-params.domain magicbot
              ^operator <o>
              ^current-task-segment <seg>
              ^top-state.io.output-link <out>)
   (<o> ^name send-turn-command
        ^command-name <cmd-name>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^item-type output-command
          ^name turn
          ^parameters <params>
          ^termination-condition.name stabilized)
   (<params> ^direction -1
             ^yaw 6.28)
   (<seg> ^<cmd-name> <law>)
}


