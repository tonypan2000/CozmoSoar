### Once the agent sent a message and received a yes, we mark the person as following ###

sp {op_start-leading1*propose*add-following-predicate
   (state <s> ^name op_start-leading1
              ^current-task-segment.received-yes true
              ^person <person>)
   (<person> ^predicates <preds>)
   (<preds> -^is-following1 following1)
-->
   (<s> ^operator <o> + =)
   (<o> ^name add-following-predicate
        ^person <person>)
}

sp {op_start-leading1*apply*add-following-predicate*add*following1
   (state <s> ^name op_start-leading1
              ^operator <o>)
   (<o> ^name add-following-predicate
        ^person.predicates <preds>)
-->
   (<preds> ^is-following1 following1)
}

sp {op_start-leading1*apply*add-following-predicate*remove*not-following1
   (state <s> ^name op_start-leading1
              ^operator <o>)
   (<o> ^name add-following-predicate
        ^person.predicates <preds>)
   (<preds> ^is-following1 not-following1)
-->
   (<preds> ^is-following1 not-following1 -)
}
