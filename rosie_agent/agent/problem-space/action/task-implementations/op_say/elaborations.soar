sp {op_say*elaborate*sentence-obj*task-operator*arg1
   (state <s> ^name op_say1
              ^task-operator.arg1.id <obj>)
-->
   (<s> ^sentence-obj <obj>)
}

sp {op_say*elaborate*sentence*task-operator*arg1
   (state <s> ^name op_say1
              ^sentence-obj.predicates.sentence <sent>)
-->
   (<s> ^sentence <sent>)
}

sp {op_say*elaborate*person*task-operator*arg2
   (state <s> ^name op_say1
              ^task-operator.arg2.{2} <person>)
-->
   (<s> ^person <person>)
}

#### GOAL SATISFACTION ####

# no person 
sp {op_say*elaborate*desired*satisfied
   (state <s> ^name op_say1
             -^person
              ^current-task-segment.send-message.status complete)
-->
   (<s> ^desired.satisfied true)
}

# person
sp {op_say*elaborate*desired*satisfied*person
   (state <s> ^name op_say1
              ^sentence-obj <msg>
              ^person <person>
              ^world.predicates.predicate <heard>)
   (<heard> ^handle heard2
            ^instance <i>)
   (<i> ^1 <person> ^2 <msg>)
-->
   (<s> ^desired.satisfied true)
}


