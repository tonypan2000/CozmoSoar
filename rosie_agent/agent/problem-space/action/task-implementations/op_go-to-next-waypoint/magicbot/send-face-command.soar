sp {op_go-to-next-waypoint1*propose*send-face-command
   (state <s> ^name op_go-to-next-waypoint1
              ^problem-space.execution-type external
              ^do-face true
              ^current-task-segment.position-set.next { <next> <> none }
             -^current-task-segment.face-command
             -^current-task-segment.drive-command)
   (<next> ^x <x> ^y <y>)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-face-command
        ^position <next>)
}

sp {op_go-to-next-waypoint1*apply*send-face-command
   (state <s> ^name op_go-to-next-waypoint1
              ^operator <o>
              ^top-state.perception-monitor.input-link.self.pose <pose>
              ^top-state.io.output-link <out>
              ^current-task-segment <seg>)
   (<o> ^name send-face-command
        ^position <pos>)
   (<pose> ^x <rx> ^y <ry>)
   (<pos> ^x <px> ^y <py>)
-->
   (<out> ^face-point <fp>)
   (<fp> ^cur-x <rx> ^cur-y <ry> ^x <px> ^y <py>)
   (<seg> ^face-command <fp>)
}
