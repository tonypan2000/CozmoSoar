### propose op_turn-on1 during task planning ###

# propose if arg1 has activation1=off2 and door2=closed2
sp {problem-space*action*propose-subtasks*propose*op_turn-on1*has*door
   (state <s> ^problem-space <ps>
              ^world.objects.object <obj>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<obj> ^predicates <preds>)
   (<preds> ^activation1 off2
            ^door2 closed2)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-on1 
         ^item-type task-operator
         ^task-handle turn-on1
         ^perform multiple
         ^arg1 <arg1>)
   (<arg1> ^arg-type object
           ^id <obj>)
}

# propose if arg1 has activation=off2 and no door
sp {problem-space*action*propose-subtasks*propose*op_turn-on1*no*door
   (state <s> ^problem-space <ps>
              ^world.objects.object <obj>)
   (<ps> ^name action
         ^propose-subtasks true)
   (<obj> ^predicates <preds>)
   (<preds> ^activation1 off2
           -^door2)
-->
   (<s> ^operator <op> +)
   (<op> ^name op_turn-on1 
         ^item-type task-operator
         ^task-handle turn-on1
         ^perform multiple
         ^arg1 <arg1>)
   (<arg1> ^arg-type object
           ^id <obj>)
}

