sp {learn-subtask-policy*task-operator*propose*report-success
   (state <s> ^problem-space.subproblem retrospective
              ^superstate.name learn-subtask-policy
              ^desired <des>)
   (<des> ^satisfied true)
-->
   (<s> ^operator <o> + >)
   (<o> ^name report-success)
}

sp {learn-subtask-policy*task-operator*apply*report-success
   (state <s> -^name push-procedural-subgoal
              ^problem-space.subproblem retrospective
              ^superstate.name learn-subtask-policy
              ^operator.name report-success
              ^superstate <ss>)
-->
   (<ss> ^retrospective-learning-result success)
}
             
sp {learn-subtask-policy*task-operator*prefer*report-success*over*all*others
   (state <s> ^problem-space.subproblem retrospective
              ^superstate.name learn-subtask-policy
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name report-success)
   (<o2> ^name <> report-success)
-->
   (<s> ^operator <o1> > <o2>)
}
