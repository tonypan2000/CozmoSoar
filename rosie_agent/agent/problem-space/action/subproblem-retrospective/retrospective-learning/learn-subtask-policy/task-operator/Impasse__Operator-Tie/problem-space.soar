# subproblem retrospective selection space turn on chunking
sp {subproblem*retrospective*selection*turn*chunking*on
   (state <s> ^name selection
              ^problem-space <ps>)
   (<ps> ^subproblem retrospective
         ^learning <learn>)
-->
   (<learn> ^use chunking)
}

sp {subproblem*retrospective*selection*reject*evaluate-operator*if*not*matched
   (state <s> ^name selection
              ^problem-space <ps>
              ^operator <o> +
             -^match-task-operator.successful-match <ssop>)
   (<ps> ^subproblem retrospective)
   (<o> ^name evaluate-operator
        ^superoperator <ssop>)
-->
   (<s> ^operator <o> -)
}
         
sp {subproblem*retrospective*elaborate*problem-space*world*shallow*copy
   (state <s> ^superstate.name learn-subtask-policy
              ^problem-space <ps>)
   (<ps> ^name action
         ^world <world>
         ^subtasks <subs>)
-->
   (<world> ^copy-type shallow)
   (<subs> ^copy-type shallow)
}
